{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "./**/openpgp.min.js"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "./**/*.js",
    "./**/*.json",
    "./**/*.ejs",
    "./**/*.css",
    "./**/*.md"
  ],

  "ext": "js,json,css,ejs"
}
