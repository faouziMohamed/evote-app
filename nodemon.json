{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "./**/*.json",
    "./**/*.ejs",
    "./**/*.css",
    "./**/*.md"
  ],

  "ext": "js,json,css,ejs"
}
