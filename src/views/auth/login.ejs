<form action="/login" method="post" class="auth-form">
  <section class="form-content">
    <div class="row-content identifiant">
      <input
        type="text"
        id="username"
        name="username"
        class="input-field pass-auth"
        placeholder="<%= content[lang].usernameLabel %>"
        required
      />
    </div>
    <div class="row-content password">
      <input
        type="password"
        id="password"
        name="password"
        class="input-field pass-auth"
        placeholder="<%= content[lang].passwordLabel %>"
        required
      />
    </div>
    <div class="row-content btn-row">
      <button class="reset-btn" type="reset">
        <%= content[lang].resetBtn %>
      </button>
      <button class="submit-btn" type="submit">
        <%= content[lang].submitBtn %>
      </button>
    </div>
  </section>
</form>
