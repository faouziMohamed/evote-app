<header class="page-header">
  <h1 class="page-header__title"><%= content[lang].pageTitle %></h1>
  <p class="auth__text">
    <%= content[lang].newToUs %>
    <a href="/register" class="auth__link"> <%= content[lang].signUp %></a>
  </p>
</header>
<div class="auth-form-wrapper" id="form-parent">
  <%- include("./partials/_useServerMessage") %>
  <form class="auth-form" id="activation-form">
    <div class="form-floating">
      <input
        data-name="<%= content[lang].emailLabel %>"
        type="email"
        class="form-floating__input form-control"
        id="email"
        name="email"
        placeholder=""
        required
      />
      <label for="email" class="form-floating__label">
        <%= content[lang].emailLabel %>
      </label>
      <div class="invalid-feedback"></div>
    </div>
    <div class="form-floating">
      <input
        data-name="<%= content[lang].cinLabel %>"
        type="number"
        class="form-floating__input form-control"
        id="cin"
        name="cin"
        placeholder=""
        pattern="\d{5,}"
        required
      />
      <label for="cin" class="form-floating__label">
        <%= content[lang].cinLabel %>
      </label>
      <div class="invalid-feedback"></div>
    </div>
    <button class="btn btn-primary btn-submit signup-btn" id="btn-submit">
      <%= content[lang].submitBtn %>
    </button>
  </form>
</div>
