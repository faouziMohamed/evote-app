<header class="page-header">
  <h1 class="page-header__title"><%= content[lang].pageTitle %></h1>
  <p class="auth__text">
    <%= content[lang].accountNotActivated %>
    <a href="/register" class="auth__link">
      <%= content[lang].activateAccount %>
    </a>
  </p>
  <p class="auth__text">
    <%= content[lang].newToUs %>
    <a href="/register" class="auth__link"> <%= content[lang].signUp %></a>
  </p>
</header>
<div class="auth-form-wrapper">
  <%- include("./partials/_useServerMessage") %>
  <form action="/login" method="POST" class="auth-form" id="auth-form">
    <div class="form-floating">
      <input
        type="text"
        class="form-floating__input form-control"
        id="username"
        name="username"
        placeholder="<%= content[lang].usernameLabel %>"
        minlength="3"
        pattern="^[a-z][a-z0-9_]{3,}$"
        required
      />
      <label for="username" class="form-floating__label">
        <%= content[lang].usernameLabel %>
      </label>
    </div>
    <div class="form-floating">
      <input
        type="password"
        name="password"
        class="form-floating__input form-control"
        id="password"
        placeholder="<%= content[lang].passwordLabel %>"
        required
      />
      <label for="password" name="password" class="form-floating__label">
        <%= content[lang].passwordLabel %>
      </label>
    </div>
    <p class="auth__text auth__forgot-password">
      <a href="/reset-password" class="auth__link">
        <%= content[lang].forgotPassword %>
      </a>
    </p>
    <button class="btn btn-primary btn-submit signin-btn" id="btn-submit">
      <%= content[lang].submitBtn %>
    </button>
  </form>
</div>
