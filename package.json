{
  "name": "server",
  "author": "Faouzi Mohamed",
  "version": "1.0.0",
  "private": true,
  "description": "A simulation of online voting using basic nodejs, express and openPGP for encryption.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faouziMohamed/evote-app.git"
  },
  "keywords": [
    "vote",
    "voting",
    "elections",
    "cryptography",
    "openPGP"
  ],
  "engines": {
    "node": "14.17.3"
  },
  "bugs": {
    "url": "https://github.com/faouziMohamed/evote-app/issues"
  },
  "homepage": "https://github.com/faouziMohamed/evote-app#readme",
  "scripts": {
    "upg": "yarn upgrade --latest",
    "lint": "eslint ./src --ext js --fix --cache",
    "csslint": "stylelint ./src/**/*.css --fix --cache",
    "ejslint": "ejslint ./src/**/*.ejs",
    "format": "prettier  --write './src/**/*.{js,css,json}'",
    "prepare": "husky install",
    "clean": "rimraf dist",
    "build:js": "webpack --progress",
    "build:scss": "sass --watch --style=compressed src/public/sass:src/public/styles/ &",
    "restart": "npm run build:js && babel-node ./src/bin/www.js --trace-deprecation",
    "build": "npm run clean && echo 'npm run build:scss' && babel ./src --out-dir dist --copy-files",
    "start": "npm run prod",
    "dev": "DEBUG='evote-app:*'  NODE_ENV=development nodemon --exec npm run restart",
    "prod": "DEBUG='evote-app:*' NODE_ENV=production node ./dist/bin/www.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.3",
    "address": "^1.1.2",
    "apexcharts": "^3.28.1",
    "bcrypt": "^5.0.1",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.5.0",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.16.4",
    "cors": "^2.8.5",
    "crypto-es": "^1.2.7",
    "crypto-js": "^4.1.1",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "ejs": "~3.1.6",
    "express": "~4.17.1",
    "express-ejs-layouts": "^2.5.1",
    "express-minify": "^1.0.0",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "http-errors": "~1.8.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.2",
    "morgan": "~1.10.0",
    "nanoid": "^3.1.25",
    "openpgp": "^5.0.0-6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "unique-names-generator": "^4.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@types/crypto-js": "^4.0.2",
    "@types/express-minify": "^0.1.35",
    "babel-loader": "^8.2.2",
    "babel-minify": "^0.5.1",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "ejs-lint": "^1.2.1",
    "ejs-loader": "^0.5.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.38.2",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-group-selectors": "^1.0.8",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "lint-staged": {
    "./**/*.{js}": "eslint --cache --fix",
    "./styles/*.scss": "stylelint --fix",
    "./**/*.{js,json,md,scss,ejs,html}": "prettier --write"
  }
}
